<div class="row">
	<div class="col">
		<h2 class="assignmentName"><%=assignment.name%></h2>
	</div>
	<div class="col">
		<h3 class="dueDate"><%=assignment.dueDate%></h3>
	</div>
	<div class="col">
		<h3 class="assignment-description">Details</h3>
		<div class="details-description">
			<button><i class="fas fa-times"></i></button>
			<p>
				<%=assignment.description%>	
			</p>	
		</div>
	</div>
	<div class="col">
		<div class="edit-delete">
			<a class=" edit btn btn-warning" href="/class/<%=classData._id%>/Assignment/<%=assignment._id%>/edit"><i class="fas fa-edit"></i></a>
			<form style="display: inline;" action="/class/<%=classData._id%>/Assignment/<%=assignment._id%>/?_method=DELETE" method="POST">
				<button class="trash btn btn-danger"><i class="fas fa-trash"></i></button>
			</form>
		</div>
	</div>
</div>