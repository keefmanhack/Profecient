<%- include("../partials/header") %>



<h1>Create a new semester</h1>

<form action="/newsemester" method="POST">
	<input type="text" name="semesterName" placeholder="Name">
	<button class="btn btn-primary" type="button">New Class</button>
	<button class="btn btn-success">Complete</button>
	<hr>
	<input type="text" name="class[name]" placeholder="Course Name">
	<input type="text" name="class[instructor]" placeholder="Instructor">
	<input type="text" name="class[location]" placeholder="Location">
	<div>
		<input class=check type="checkbox" value="true" name="class[days][monday]">
		<input class=hid type="hidden" value="false" name="class[days][monday]">
		<label>Monday</label>
		<input class=check type="checkbox" value="true" name="class[days]tuesday]">
		<input class=hid type="hidden" value="false" name="class[days][tuesday]">
		<label>Tuesday</label>
		<input class=check type="checkbox" value="true" name="class[days][wednesday]">
		<input class=hid type="hidden" value="false" name="class[days][wednesday]">
		<label>Wednesday</label>
		<input class=check type="checkbox" value="true" name="class[days][thursday]">
		<input class=hid type="hidden" value="false" name="class[days][thursday]">
		<label>Thursday</label>
		<input class=check type="checkbox" value="true" name="class[days][friday]">
		<input class=hid type="hidden" value="false" name="class[days][friday]">
		<label>Friday</label>
		<input class=check type="checkbox" value="true" name="class[days][saturday]">
		<input class=hid type="hidden" value="false" name="class[days][saturday]">
		<label>Saturday</label>
		<input class=check type="checkbox" value="true" name="class[days][sunday]">
		<input class=hid type="hidden" value="false" name="class[days][sunday]">
		<label>Sunday</label>
	</div>
	<label>Start Time</label>
	<input type="number" min="1" max="12" name="class[time][startHour]">
	<label>:</label>
	<input type="number" min="0" max="60" name="class[time][startMinute]">
	<select name="class[time][startAMPM]">
		<option value="AM">AM</option>
		<option value="PM">PM</option>
	</select>
	<label>End Time</label>
	<input type="number" min="1" max="12" name="class[time][endHour]">
	<label>:</label>
	<input type="number" min="0" max="60" name="class[time][endMinute]">
	<select name="class[time][endAMPM]">
		<option value="AM">AM</option>
		<option value="PM">PM</option>
	</select>
	
</form>


<script type="text/javascript" src="/scripts/newsemester.js"></script>
<%- include("../partials/footer") %>